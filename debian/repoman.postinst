#!/bin/sh

set -e
case "$1" in
   configure)
    #Fix bug with jammy repositories being included
    dpkg --compare-versions $2 lt 2.6.2 && sed -i 's/jammy/focal/g' /etc/apt/sources.list
   ;;

   abort-upgrade|abort-remove|abort-deconfigure)
   ;;

   *)
       exit 1
   ;;
esac

#DEBHELPER#

exit 0

